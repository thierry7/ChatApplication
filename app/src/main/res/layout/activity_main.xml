<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mainpagecolor"
    tools:context=".LoginActivity">


        <androidx.appcompat.widget.AppCompatTextView

            android:layout_width="@dimen/logpagewith"
            android:layout_height="@dimen/logpageheight"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/margeleft"
            android:layout_marginLeft="@dimen/margeright"
            android:layout_marginTop="@dimen/margetop"
            android:layout_marginEnd="@dimen/margeend"
            android:layout_marginRight="89dp"
            android:layout_marginBottom="@dimen/margebottom"
            android:gravity="center"
            android:text="@string/appname"
            android:textColor="@color/roundedcolorbut"
            android:textStyle="italic"
            android:textSize="35dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="@dimen/weitlog"
            android:background="@drawable/edit_rounded"
            android:layout_height="@dimen/heightlog"
            android:layout_centerHorizontal="true"
            android:paddingLeft="10dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_phone_forwarded_black_24dp"
            android:layout_marginTop="150dp"
            android:hint="@string/phoneHint"
            android:inputType="phone" />

        <EditText
            android:id="@+id/code"
            android:layout_width="@dimen/weitlog"
            android:layout_height="@dimen/heightlog"
            android:background="@drawable/edit_rounded"
            android:drawableLeft="@drawable/ic_verified_user_black_24dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/phone"
            android:paddingLeft="10dp"
            android:drawablePadding="10dp"
            android:layout_marginTop="10dp"
            android:hint="@string/verificationHint"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/sendCode"
            android:layout_width="@dimen/weitlog"
            android:layout_height="@dimen/heightlog"
            android:background="@drawable/button_rounded"
            android:drawableLeft="@drawable/ic_send_black_24dp"


            android:paddingLeft="10dp"
            android:drawablePadding="10dp"
            android:text="@string/buttonVerf"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:layout_below="@+id/code"

            />

</RelativeLayout>